@using HRApp.Models

<div class="modal" tabindex="-1" style="display:block">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(CalendarEvent.Id == 0 ? "New Event" : "Edit Event")</h5>
                <button type="button" class="btn-close" @onclick="@(() => DialogService.Close(null))"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title" @bind="CalendarEvent.Title" />
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="startDate">Start</label>
                            <input type="datetime-local" class="form-control" id="startDate" @bind="CalendarEvent.Start" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="endDate">End</label>
                            <input type="datetime-local" class="form-control" id="endDate" @bind="CalendarEvent.End" />
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description" @bind="CalendarEvent.Description"></textarea>
                        </div>
                    </div>
                </div>
                <AuthorizeView Roles="Admin">
                    <Authorized>
                        <div class="row mt-2">
                            <div class="col-md-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isCompanyWide" @bind="CalendarEvent.IsCompanyWide">
                                    <label class="form-check-label" for="isCompanyWide">
                                        Company-wide event
                                    </label>
                                </div>
                            </div>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="@(() => DialogService.Close(null))">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="@(() => DialogService.Close(CalendarEvent))">Save</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public CalendarEvent CalendarEvent { get; set; } = new();
    [Inject] public DialogService DialogService { get; set; } = default!;
}